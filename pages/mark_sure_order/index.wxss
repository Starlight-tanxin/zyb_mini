/* pages/mark_sure_order/index.wxss */
.container{
  padding-bottom: 20px;
}
.order-top{
  padding: 10px 30px 10px 15px;
}
.order-top>.top{
  display: flex;
  align-items: center;
  color: #666666;
}
.order-top>.top>.tag{
  color: #fff;
  width: 40px;
  height: 20px;
  text-align: center;
  line-height: 20px;
  background-color: #893100;
  border-radius: 5px;
  margin-right: 15px;
}
.order-top>.area{
  font-weight: 700;
  line-height: 40px;
  font-size: 14px;
}

.shop-box{
  margin-top: 25px;
  border-top: 1px solid #893100;
}
.shop-box>.shop{
  padding: 10px 30px 10px 15px;
  display: flex;

}
.shop-box>.shop>.lft{
  margin-right: 30px;
}
.shop-box>.shop>.rgt{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.shop-box>.shop>.rgt>.title{
  color:  #000;
  font-size: 12px;
  font-weight: 800;
}
.shop-box>.shop>.rgt>.desc{
  flex: 1;
  margin-top: 5px;
  color:  #8e8e8e;
  font-size: 10px;
}
.shop-box>.shop>.rgt>.price{
  color:  #893100;
}

.shop-price{
  padding: 15px 30px;
  border-bottom: 1px solid #893100;
  border-top: 1px solid #893100;
   margin-top: 25px;
}
.shop-price>.info{
  line-height: 30px;
}
.shop-price>.info>.act{
  color:  #893100;
}

.pay{
  color:  #893100;
  padding: 15px 30px;
}
.pay>.btn{
  width: 90px;
  height: 30px;
  text-align: center;
  color: #fff;
  background-color: #893100;
  border-radius: 5px;
  line-height: 30px;
  margin:40px 0; 
}