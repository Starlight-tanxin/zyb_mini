/* pages/top_up/index.wxss */

 .pad-com{
   padding: 15px 25px;
 } 
.top{
  color:#8e8e8e;
  font-size:10px;
  line-height: 40px;
  padding: 0 25px;
}
.big-input{
  margin-top: 20px;
  border-top: 1px solid #893100;
}
.big-input>.title{
  color:#8e8e8e;
  font-size:10px;
}
.big-input input{
  height: 72px;
  width: 100%;
  border: 1px solid #893100;
  box-sizing: border-box;
  padding-left: 15px;
  font-size: 20px;
  font-weight: 800;
  margin: 10px 0;
}
.big-input .tip{
  font-weight: 800;
}
.fot{
  color: #009fd1;
  display: flex;
  align-items: center;
}
.fot > .txt{
  display: inline-block;
  margin-right: 5px;
  width: 8px;
  height: 8px;
  border: 1px solid #893100;
  border-radius: 100%;
}
.btn{
  background: #893100;
  color: #fff;
  font-weight:700;
  width: 90px;
  margin: 0 auto;
  margin-top: 82px;
  height: 30px;
  text-align: center;
  line-height: 30px;
  border-radius: 5px;
}