.wrap-bg{
  width: 100%;
  box-sizing: border-box;
  height: 235px;
  padding: 60px 13px 0 13px;
  background-color:#893100; 
}
.title{
  font-size: 40rpx;
  color: #fff;
  text-align: center;
}
.search{
  box-sizing: border-box;
  padding-left: 15rpx;
  background: #fff;
  width: 100%;
  border-radius: 25rpx;
  height: 30px;
  line-height: 30px;
  color: #adadad;
  font-size: 20rpx;
  margin-top: 13px;
  display: flex;
  align-items: center;
}
.txt{
  display: inline-block;
  margin-left: 10rpx;
}

.swiper{
  position: absolute;
  width: 100%;
  height: 180px;
  top: 140px;
  box-sizing: border-box;
  padding: 0 13px;
  border-radius:5px; 
  z-index: 10;
}
.swiper-item{
  background: pink;
  width: 100%;
  height: 100%;
  border-radius:5px;
}

.pancel{
  padding-top: 13px;
  padding-bottom: 10px;
}
.pancel-cont{
  padding: 0 30px;
  
}
.pancel-title{
  padding-left: 15px;
  margin-bottom: 9px;
  font-size: 14px;
  color: #000;
}
.pacel-item{
  text-align: center;
}
.pacel-item>.top{
  width: 60px;
  height:78px;
  background: pink;
}
.pacel-item>.bottom{
  margin-top: 7px;
  font-size: 12px;
}

.goodsImg{
  width: 72px;
  height:89px; 
}

.recom-box{
  padding: 0 13px;
}
.recom-title{
  height: 38px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.recom-title>.title{
  color: #893300;
  margin: 0 5px;
  font-size: 16px;
}
.recom-title > .liner{
  width: 18px;
  height: 1px;
  background-color: #893300;
}  

.recom-cont{
  display: flex;
  justify-content: space-between;
  padding-bottom: 15px;
}
.recom-shop{
  display: flex;
}
.recom-shop>.lft>image{
  width: 72px;
  height: 89px;
}
.recom-shop>.rgt{
  margin-left: 13px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.recom-shop>.rgt>.title{
  text-align: left;
  font-size: 10px;
  font-weight: 800;
  color: #000;
}
.recom-shop>.rgt>.desc{
  font-size: 8px;
  color: #b3b3b3;
}
.recom-shop>.rgt>.price{
  color: #8e0000;
  font-size: 10px;
}