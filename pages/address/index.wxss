/* pages/address/index.wxss */
.address{
  margin-bottom: 80px;
}
.address-item{
  padding: 18px 13px;
  border-top: 1px solid #893100;
}
.address-info{
  flex: 1;
  margin: 0 15px;
}
.address-info>.title{
  font-size: 16px;
  vertical-align: middle;
  margin-bottom: 8px;
}
.address-info>.title>.txt{
  display: inline-block;
  margin-left: 5px;
  width: 40px;
  height: 15px;
  line-height: 15px;
  color: #fff;
  font-size: 10px;
  text-align: center;
  background-color: #893100;
  border-radius: 5px;
}
.address-info>.desc{
  color: #8e8e8e;
  font-size: 12px;
}
.btn{
  width: 70%;
  height: 30px;
  line-height: 30px;
  color: #fff;
  text-align: center;
  background-color: #893100;
  border-radius: 15px;
  margin: auto;
  position: fixed;
  bottom: 30px;
  left: 15%;
  z-index: 100;
}