/* pages/ranking/index.wxss */
.ranking{
  padding: 10px 0;
  text-align: center;
}
.rank-head{
  height: 30px;
  line-height: 30px;
  color: #241917;
  font-weight: 800;
  font-size: 13px;
}

.rank-cont{
  height: 35px;
  line-height: 35px;
  color: #241917;
}
.rank-cont .btn{
  display: inline-block;
  vertical-align: middle;
  line-height: 14px;
  font-size: 10px;
  width: 45px;
  height: 16px;
  border: 1px solid #893100;
}
.hover{
  background: #893100;
  color: #fff;
}