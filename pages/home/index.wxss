/* pages/home/home.wxss */
.swiper{
  width: 100%;
  height: 180px;
  overflow: hidden;
}
.recom-title{
  height: 38px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.recom-title>.title{
  color: #893300;
  margin: 0 5px;
  font-size: 16px;
}
.recom-title > .liner{
  width: 18px;
  height: 1px;
  background-color: #893300;
}

.card{
  padding: 20px 10px;
  text-align: center;
}
.card-img{
  height: 80px;
  position: relative;
}
.card-btn{
  position: absolute;
  bottom: 6px;
  left: 50%;
  transform: translateX(-50%);
  padding: 5px 15px;
  height: 12px;
  text-align: center;
  line-height: 12px;
  color: #fff;
  border-radius: 12px;
  background: #893300;
  font-size: 10px;
}
.fot{
  padding: 20px 10px;
}

.fot-item{
  border:1px solid #893300;
  border-radius: 5px;
  text-align: center;
  color: #893300;
  font-size: 10px;
}
.fot-btn{
  padding: 2px 0;
  width: 70%;
  margin:15px auto; 
  text-align: center;
  color: #fff;
  border-radius: 12px;
  background: #893300;
  font-size: 10px;
}
.big-txt{
  font-size: 40px;
  padding: 8px 0;
  color: #000;
  font-weight: 800;
  white-space: nowrap;
}